@model HomePageBlogItemsModel
@if (Model.Items.Any())
{
    <div class="blog-list-homepage">
        <h2 class="generalTitle text-center mb-3">
            @T("Blog.Latest")
        </h2>
            <div class="row">
                @foreach (var item in Model.Items)
                {
                     @if (item.PictureModel != null && !string.IsNullOrEmpty(item.PictureModel.ImageUrl))
                     {
                        <div class="col-md-6 col-12 mb-md-0 mb-3">
                            <div class="card p-3">
                                <div class="card-header px-0 pb-0">
                                    <div class="img-container">
                                        <a href="@Url.RouteUrl("BlogPost", new { SeName = item.SeName })">
                                            <img class="card-img-top img-fluid rounded-0" alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title">
                                        </a>
                                    </div>
                                </div>
                                <div class="card-body pb-0 px-0 d-flex align-items-center flex-column">
                                        <h3 class="h5 mb-2 text-left w-100"><a href="@Url.RouteUrl("BlogPost", new { SeName = item.SeName })">@item.Title</a></h3>
                                        <span class="news-date text-muted text-left w-100"><i class="far fa-clock mr-2"></i>@item.CreatedOn.ToString("D")</span>
                                        <div class="desc-short my-3">
                                            @Html.Raw(item.Short)
                                        </div>
                                        <div class="d-flex justify-content-center w-100">
                                            <a class="btn btn-sm btn-primary read-more text-capitalize" href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })">@T("Blog.MoreInfo")</a>
                                        </div>
                                </div>
                            </div>
                        </div>
                     }
                     else
                     {
                         <div class="col-md-6 col-12 mb-md-0 pb-3 d-flex align-items-center">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="card p-3">
                                            <h3 class="h5 mb-2"><a href="@Url.RouteUrl("BlogPost", new { SeName = item.SeName })">@item.Title</a></h3>
                                            <span class="news-date text-muted"><i class="far fa-clock mr-2"></i>@item.CreatedOn.ToString("D")</span>
                                            <div class="desc-short my-3">
                                                @Html.Raw(item.Short)
                                            </div>
                                            <div class="d-flex justify-content-center w-100">
                                                <a class="btn btn-sm btn-primary read-more text-capitalize" href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })">@T("Blog.MoreInfo")</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>
                     }
                }
            </div>
        <div class="view-all text-center mt-3">
            <a class="btn btn-secondary" href="@Url.RouteUrl("Blog")">@T("Blog.ViewAll")</a>
        </div>
    </div>
}

